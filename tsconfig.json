{
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "lib": ["esnext"],
        "esModuleInterop": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    }
}